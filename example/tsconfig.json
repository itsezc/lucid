{
	"extends": "../tsconfig.json",
	"include": [
		"./src/**/*"
	],
	"compilerOptions": {
		"rootDir": "./src",
		"lib": [
			"ES2022"
		],
		"module": "NodeNext",
		"target": "ESNext",
		"strictPropertyInitialization": false,
		"moduleResolution": "nodenext",
		"experimentalDecorators": true,
		"resolveJsonModule": true
	},
	"exclude": [
		"node_modules",
		"dist",
		"build"
	]
}